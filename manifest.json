{
  "manifest_version": 3,
  "name": "PomodoTo",
  "version": "1.0",
  "description": "A simple Pomodoro timer and Todo list.",
  "permissions": ["storage", "alarms", "offscreen"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_clock16.png",
      "48": "images/icon_clock48.png",
      "128": "images/icon_clock128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon_clock16.png",
    "48": "images/icon_clock48.png",
    "128": "images/icon_clock128.png"
  }
}